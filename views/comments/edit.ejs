<% include ../partials/header %>

  <div class="form-container">
        <h4 style="text-align: center; margin-bottom: 20px">Edit Comment</h4>
      <div class="row">
        <div class="new-form">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" name="comment[text]" placeholder="Add comment"><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-xs btn-default btn-primary btn-block">Edit</button>
                </div>     
            </form>
            <a href="/campgrounds">Head Back to Camp</a> 
        </div>
      </div>
  </div>  


<% include ../partials/footer %>