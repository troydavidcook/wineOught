<% include ../partials/header %>

  <div class="form-container">
        <h4 style="text-align: center; margin-bottom: 20px">Add New Comment to <%= wine.name %></h4>
      <div class="row">
        <div class="new-form">
            <form action="/wines/<%= wine._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" name="comment[text]" placeholder="Add comment"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-xs btn-default btn-primary btn-block red-button">Add Comment</button>
                </div>     
            </form>
            <span class="text-left">
                <a class="btn btn-secondary btn-xs" id="btn-secondary-white" href="/wines">Back to the wines!</a>
            </span>  
        </div>
      </div>
  </div>  


<% include ../partials/footer %>