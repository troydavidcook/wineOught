<% include ./partials/header %>

<div class="form-container">
    <h4 class="create-new">Sing up here. And thanks for joining!</h4>
    <div class="row">
        <div class="new-form">
            <form action="/signup" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="User Name">
                </div>
                <div class="form-group">
                        <input class="form-control" type="password" name="password" placeholder="Password">
                </div>
                <div class="form-group">
                <div class="form-group">
                    <button class="btn btn-sm btn-block red-button">Sign Up!</button>
                </div>     
            </form>
            <span class="text-left">
                    <a class="btn btn-secondary btn-xs" id="btn-secondary-white" href="/wines">Back to the wines!</a>
            </span>  
        </div>
    </div>
</div> 

