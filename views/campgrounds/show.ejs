<% include ../partials/header%>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">yelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item ">Info 2</li>
                <li class="list-group-item ">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive"  src="<%= campgrounds.image %>">
            <div class="caption-full">
                <h4 class="pull-right">$10.00/Night</h4>
                <h4><a href='#'><%= campgrounds.name %></a></h4>
                <p><em>Added by <%= campgrounds.author.username %></em></p>
                <hr>
                <p><%= campgrounds.description %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success btn-xs" href="/campgrounds/<%= campgrounds._id %>/comments/new">Leave a Review</a>
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-12">
                            <% campgrounds.comments.forEach((comment) => { %>
                                <p>
                                    <strong><%= comment.author.username %></strong>
                                </p>
                                <span class="pull-right">10 Days Ago</span>
                                <p>
                                        <%= comment.text %>
                                </p>  
                            <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer%>