<% include ../partials/header%>

    <h3><%= campgrounds.name %></h3>

    <img src="<%= campgrounds.image %>" alt="">

    <p> <%= campgrounds.description %> </p>
    <p>
        <a class="btn btn-success btn-xs" href="/campgrounds/<%= campgrounds._id %>/comments/new">Add a New Comment</a>
    </p> 

    <% campgrounds.comments.forEach((comment) => { %>
        <p>
            <strong><%= comment.author %></strong> - <%= comment.text %>
        </p>   
    <% }) %>
     
<% include ../partials/footer%>