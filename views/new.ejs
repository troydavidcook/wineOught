<% include ./partials/header %>

  <div class="container">
    <h4>Add a new campground!</h4>
      <div class="row new-form">
        <form action="/campgrounds" method="POST">
            <div class="new-form">
                <div class="form-group">
                    <input class="inputs" type="text" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="inputs" type="text" name="image" placeholder="Image Url">
                </div>
                <div class="form-group">
                    <button class="btn btn-xs btn-default btn-primary">Submit</button>
                </div>
            </div>  
        </form>
        <a href="/campgrounds">Back to Camp Grounds</a>
      </div>
  </div>  


