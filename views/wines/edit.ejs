<% include ../partials/header %>

  <div class="form-container">
        <h4 class="create-new" >Edit <%= wine.name %></h4>
      <div class="row">
        <div class="new-form">
            <form action="/wines/<%= wine._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="wine[name]" value="<%= wine.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="wine[location]" id="location" value="<%= wine.location %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="wine[image]" value="<%= wine.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="wine[description]"><%= wine.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-xs btn-default btn-primary btn-block red-button">Edit Wine</button>
                </div>     
            </form>
            <span class="text-left">
                <a class="btn btn-secondary btn-xs" id="btn-secondary-white" href="/wines/<%= wine._id %>">Back to the wines!</a>
            </span> 
        </div>
      </div>
  </div>  


<% include ../partials/footer %>