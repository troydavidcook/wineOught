<% include ../partials/header %>

  <div class="form-container">
        <h4 class="create-new" >Edit <%= wine.name %></h4>
      <div class="row">
        <div class="new-form">
            <form action="/wines/<%= wine._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="wine[name]" value="<%= wine.name %>">
                </div>
                <div class="form-group">
                        <input class="form-control" type="number" name="wine[price]" value="<%= wine.price %>" min="0.00" step"0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="wine[image]" value="<%= wine.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="wine[description]"><%= wine.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-xs btn-default btn-primary btn-block">Submit</button>
                </div>     
            </form>
            <a href="/wines/<%= wine._id %>">Go Back to wines.</a> 
        </div>
      </div>
  </div>  


<% include ../partials/footer %>